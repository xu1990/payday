# 薪日 PayDay 主服务环境变量示例（复制为 .env 后填写，勿提交 .env）

# 应用
APP_NAME=薪日 PayDay
DEBUG=false

# MySQL（技术方案 2.2）
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=payday
MYSQL_PASSWORD=
MYSQL_DATABASE=payday_main

# Redis（技术方案 2.3）
REDIS_URL=redis://127.0.0.1:6379/0

# 微信小程序（技术方案 2.1）
WECHAT_APP_ID=
WECHAT_APP_SECRET=

# JWT（技术方案 2.1）
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# 金额加密（技术方案 2.2.3，需 32 字节）
ENCRYPTION_SECRET_KEY=change-me-32-bytes-key-for-fernet!!

# 腾讯云 COS（技术方案 1.2.2）
COS_SECRET_ID=
COS_SECRET_KEY=
COS_REGION=ap-guangzhou
COS_BUCKET=payday

# 阿里云 OSS 对象存储
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_BUCKET=payday

# 存储服务选择: cos（腾讯云） | oss（阿里云）
STORAGE_PROVIDER=cos

